{
	"extends": "@repo/typescript-config/base.json",
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		"sourceMap": true,
		"inlineSources": true,
		"incremental": true,
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"tsBuildInfoFile": "./dist/.tsbuildinfo",
		"module": "NodeNext"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
